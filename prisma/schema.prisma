datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // Load from .env.local
}

generator client {
  provider = "prisma-client-js"
}

model Clinic {
  id       String   @id @default(uuid()) // Auto-generate ID
  name     String   @unique
  location String
  doctors  Doctor[]
  users    User[]
}

model Doctor {
  id           String        @id @default(uuid())
  firstName    String
  lastName     String
  specialty    String
  clinic       Clinic        @relation(fields: [clinicId], references: [id])
  clinicId     String
  appointments Appointment[]
}

model Patient {
  id           String         @id @default(uuid())
  firstName    String
  lastName     String
  phone        String         @unique
  email        String         @unique
  dob          DateTime
  appointments Appointment[]
  notifications Notification[] // ðŸ”´ This is the missing field! âœ…
}

model Appointment {
  id          String   @id @default(uuid())
  patient     Patient  @relation(fields: [patientId], references: [id])
  patientId   String
  doctor      Doctor   @relation(fields: [doctorId], references: [id])
  doctorId    String
  status      String // Pending, Confirmed, Completed, Cancelled
  scheduledAt DateTime
}

model User {
  id        String   @id @default(uuid()) // Auto-generate ID
  firstName String?  // Make optional temporarily
  lastName  String?  // Make optional temporarily
  email     String   @unique
  password  String?  // Some users login via Google
  clinic    Clinic?  @relation(fields: [clinicId], references: [id])
  clinicId  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


model Notification {
  id        String   @id @default(uuid())
  patient   Patient  @relation(fields: [patientId], references: [id])
  patientId String
  type      String   // WhatsApp, Voice Call
  message   String
  sentAt    DateTime @default(now())
}
